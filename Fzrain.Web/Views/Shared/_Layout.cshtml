<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title </title>
    @Html.Partial("ImportReferences")
    <style>
     
        .mainleft {
            width: 20%;
            height: 100%;
            overflow: auto;
            background: #f5f7f8;
            float: left;
        }

        .mainright {
            width: 80%;
            background-color: #fff;
            line-height: 1.5;
            float: left;
        }


        section {
            width: 100%;
            overflow: hidden;
            margin: 0;
        }

        footer {
            background-color: #2a2d33;
            color: #fff;
            text-align: center;
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 40px;
            box-sizing: border-box;
            padding: 0 1em 0 0;
            font: 400 14px Arial, Helvetica, sans-serif;
            list-style: none;
            line-height: 40px;
        }

            footer p {
                margin: 0;
            }
    
    </style>
    <script type="text/javascript">
        $(function () {
            $(".mainright,.mainleft").height($(document).height() - 125 - $("#menu").height());

        })
    </script>
</head>
<body>
    @Html.Partial("Components/Notification")
    @Html.Partial("Components/Header")
    <section>
        @Html.Partial("Components/Menu")
        @RenderBody()
    </section>
    <footer>
        <p>&copy; @DateTime.Now.Year - Fzrain Application</p>
    </footer>

</body>

</html>
